<div class="tweet">
<article class="media">
  <figure class="media-left" title="acÃ©der au profile" style="cursor: pointer;" onclick="window.location='<%= url_for(controller:'users', action: 'show', id: tweet.user.id)%>'">
    <p class="image is-64x64">
      <img class="user-image" src="<%= url_for(controller:'users', action: 'file', id: tweet.user.id)%>">
    </p>
  </figure>
  <div class="media-content">
    <div class="content" title="lire le tweet" onclick="window.location='<%= url_for(controller:'tweets', action: 'show', id: tweet.id)%>'" style="cursor: pointer;">
      <p>
        <strong><%=tweet.user.name%></strong>
        <br>
        <small>@<%=tweet.user.login%></small>
        <small class="time-lapsed"><%=tweet.created_at%></small>
        <br>
        <span class="description">
          <%=tweet.tweet%>
        </span>
      </p>
    </div>
    <div class="tweet-image">
      <!--<img src="/asset/users/10/profile" />-->
    </div>
    <div>
      <td><%= link_to 'Show', tweet %></td>
      <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
      <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </div>
  </div>
</article>
</div>