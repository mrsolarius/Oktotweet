<div class="items-center justify-center profileMainContainer">
  <div class="profileContainer">
    <a href="<%= login == true ? url_for(controller: 'users', action: 'login', id: user.id) : url_for(controller: 'users', action: 'show', id: user.id) %>" class="-mt-8 md:-my-4 md:-ml-16">
      <img
        class="w-auto h-48 profileImage"
        src="<%= user.imageB64? ? url_for(controller: 'users', action: 'file', id: user.id) : 'data:image/png;base64, iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=' %>"
        alt="<%= user.name %>"
        />
    </a>
    <div class="flex flex-row ml-4 md:ml-0 overflow-hidden md:whitespace-nowrap text-center" style="flex-grow: 1">
      <a href="<%= login == true ? url_for(controller: 'users', action: 'login', id: user.id) : url_for(controller: 'users', action: 'show', id: user.id) %>" class="flex flex-col items-center md:items-start">
        <h2 class="text-xl font-medium"><%= user.name %></h2>
        <p class="text-base font-medium text-gray-400">@<%= user.login %></p>
      </a>
      <% if follow_box == true && user_auth!= nil %>
        <div class="flex ml-auto items-center md:items-start">
          <% if user_auth.id != user.id %>
            <% if user_auth.followings.include?(user) %>
              <button class="btnSecondary" onclick="window.location='<%=url_for(:action => 'unfollow', :controller => :follows, :follow_user_id => user.id) %>'">Ne
                plus suivre
              </button>
            <% else %>
              <button class="btnSecondary" onclick="window.location='<%=url_for(:action => 'follow', :controller => :follows, :follow_user_id => user.id) %>'">Suivre</button>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>